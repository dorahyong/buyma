# ===========================================
# Database Configuration
# ===========================================
DB_HOST=your_db_host
DB_PORT=3306
DB_USER=your_username
DB_PASSWORD=your_password
DB_NAME=your_database
DATABASE_URL=mysql+pymysql://your_username:your_password@your_db_host:3306/your_database

# ===========================================
# BUYMA API Configuration
# ===========================================
BUYMA_API_BASE_URL=https://personal-shopper-api.buyma.com/
BUYMA_SANDBOX_URL=https://sandbox.personal-shopper-api.buyma.com/
BUYMA_API_KEY=your_api_key
BUYMA_WEBHOOK_SECRET=your_webhook_secret

# ===========================================
# Cloudflare R2 Configuration (이미지 저장용)
# ===========================================
# R2 API 토큰 생성: Cloudflare 대시보드 > R2 > Manage R2 API Tokens
R2_ACCESS_KEY_ID=your_access_key_id
R2_SECRET_ACCESS_KEY=your_secret_access_key
R2_ENDPOINT_URL=https://your_account_id.r2.cloudflarestorage.com
R2_BUCKET_NAME=oneblocks-images
R2_PUBLIC_URL=https://pub-xxxxxxxx.r2.dev

# ===========================================
# Scraping Configuration
# ===========================================
SCRAPING_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
SCRAPING_DELAY_SECONDS=1
